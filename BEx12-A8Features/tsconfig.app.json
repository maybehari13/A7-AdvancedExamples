{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": []
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/**/*.worker.ts"
  ],
  "angularCompilerOptions": {
    "enableIvy": false //toggle this and enable prod mode while building to see the differences in build size
  }
}
